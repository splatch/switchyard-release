<?xml version="1.0" encoding="UTF-8"?>
<component xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd"
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <files>
    <file>
      <source>src/main/resources/external/drools/module.xml</source>
      <outputDirectory>/modules/org/drools/main</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/modules/org/drools/main</outputDirectory>
      <includes>
        <include>org.drools:drools-compiler</include>
        <include>org.drools:drools-core</include>
        <include>org.drools:drools-persistence-jpa</include>
        <include>org.drools:knowledge-api</include>
        <include>org.drools:knowledge-internal-api</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${version.drools}.${artifact.extension}</outputFileNameMapping>
      <useTransitiveDependencies>false</useTransitiveDependencies>
    </dependencySet>
  </dependencySets>
</component>
