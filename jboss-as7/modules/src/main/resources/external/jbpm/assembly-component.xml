<?xml version="1.0" encoding="UTF-8"?>
<component xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd"
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <files>
    <file>
      <source>src/main/resources/external/jbpm/module.xml</source>
      <outputDirectory>/modules/org/jbpm/main</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>target/jbpm-switchyard-${version.jbpm}.jar</source>
      <outputDirectory>/modules/org/jbpm/main</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/modules/org/jbpm/main</outputDirectory>
      <includes>
        <include>org.jbpm:jbpm-bam</include>
        <include>org.jbpm:jbpm-bpmn2</include>
        <include>org.jbpm:jbpm-flow</include>
        <include>org.jbpm:jbpm-flow-builder</include>
        <include>org.jbpm:jbpm-human-task-core</include>
        <include>org.jbpm:jbpm-human-task-mina</include>
        <include>org.jbpm:jbpm-persistence-jpa</include>
        <include>org.jbpm:jbpm-workitems</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${version.jbpm}.${artifact.extension}</outputFileNameMapping>
      <useTransitiveDependencies>false</useTransitiveDependencies>
    </dependencySet>
  </dependencySets>
</component>
